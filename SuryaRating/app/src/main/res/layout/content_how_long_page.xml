<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HowLongPage"
    tools:showIn="@layout/activity_how_long_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radioButton1-2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1-2 days"/>

        <RadioButton
            android:id="@+id/radioButton2-5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2-5 days" />
        <RadioButton
            android:id="@+id/radioButton5-10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5-10 days" />
        <RadioButton
            android:id="@+id/radioButton10-30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10-30 days" />
        <RadioButton
            android:id="@+id/radioButton_more_than_a_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More than a month" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>